{
  "name": "khan-gql-api",
  "version": "0.1.0",
  "license": "MIT",
  "author": "joseph",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/khan-gql-api.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "graphql-codegen && dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/khan-gql-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/khan-gql-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@parcel/watcher": "^2.4.1",
    "@size-limit/preset-small-lib": "^11.1.5",
    "@tsconfig/recommended": "^1.0.7",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.6",
    "size-limit": "^11.1.5",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "fetch-cookie": "^3.0.1",
    "graphql": "^16.9.0",
    "graphql-request": "^6.1.0",
    "graphql-scalars": "^1.23.0",
    "node-fetch": "^3.3.2"
  }
}
